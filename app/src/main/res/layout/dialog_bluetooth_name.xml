<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/name_containerBT"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingRight="20dp"
    android:paddingLeft="20dp">


    <TextView
        android:id="@+id/tv_rename_blutooth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Rename this Device"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:padding="@dimen/_10sdp"
        />

    <EditText
        android:id="@+id/et_rename_bluetooth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:focusable="true"
        android:inputType="text"
        android:lines="1"
        android:hint="Rename"

        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_gravity="right">



        <TextView
            android:id="@+id/btnCancelRename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/colorPrimary"
            android:text="Cancel" />


        <TextView
            android:id="@+id/btnRenameBT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="@color/partialBlackColor"
            android:text="Rename"
            />

    </LinearLayout>


</LinearLayout>