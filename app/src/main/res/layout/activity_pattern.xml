<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/stepper_bg_gradient"
    android:orientation="vertical">
    <include
        android:id="@+id/include"
        layout="@layout/main_toolbar"/>

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_80sdp"
        android:contentDescription="ic_launcher" android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="36dp"
        android:fontFamily="sans-serif-thin"
        android:gravity="center"
        android:maxLines="1"
        android:text="Welcome"
        android:textColor="@color/colorLine"
        android:textSize="34sp"/>

    <com.screenlocker.secure.views.patternlock.PatternLockWithDotsOnly
        android:id="@+id/patter_lock_view"
        android:layout_width="280dp"
        android:layout_height="300dp"
        android:layout_gravity="center_horizontal"
        app:dotNormalSize="16dp"
        android:layout_marginTop="16dp"
        app:aspectRatio="square"
        app:aspectRatioEnabled="true"
        app:dotAnimationDuration="150"
        app:dotCount="3"/>

</LinearLayout>
