<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.secureSetting.bluetooth.BluetoothMainActivity">


    <android.support.design.widget.AppBarLayout
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <android.support.v7.widget.Toolbar
            android:id="@+id/blutoothBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            />

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:id="@+id/bluetooth_switch_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/_60sdp"
        android:paddingTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:orientation="horizontal"
        android:background="@color/switchContainerColor"
        >

        <TextView
            android:id="@+id/bluetooth_settings_status"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Off"
            android:layout_weight="1"/>
        <android.support.v7.widget.SwitchCompat
            android:id="@+id/bluetooth_on_off_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/contentContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">




    <TextView
        android:id="@+id/visivble_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Visible as BCP1.0 to other devices"
        android:paddingLeft="@dimen/_60sdp"
        android:paddingBottom="@dimen/_15sdp"
        android:paddingTop="@dimen/_15sdp"
        android:paddingRight="@dimen/_20sdp"
        android:textColor="@color/partialBlackColor"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="?android:attr/listDivider"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_12ssp"
        android:textStyle="bold"
        android:text="Paired devices"
        android:paddingLeft="@dimen/_60sdp"
        android:paddingRight="@dimen/_20sdp"
        android:paddingTop="@dimen/_20sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:textColor="@color/colorAccent"/>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/paired_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/paired_device_item"/>
    <LinearLayout
        android:id="@+id/pair_new_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_15sdp">

        <ImageView
            android:layout_width="@dimen/_17sdp"
            android:layout_height="@dimen/_17sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/ic_add_black_24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pair new device"
            android:textSize="@dimen/_14ssp"
            android:layout_marginLeft="@dimen/_38sdp"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:textColor="@android:color/black"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="?android:attr/listDivider"/>



        <LinearLayout
            android:id="@+id/device_name_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/_60sdp"
            android:paddingTop="@dimen/_20sdp"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Device Name"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_14ssp"

                />
            <TextView
                android:id="@+id/bluetooth_device_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12ssp"
                android:text="BCP1.0"
                android:paddingBottom="@dimen/_20sdp"/>

        </LinearLayout>




        <TextView
            android:id="@+id/btnReceivedFiles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Received files"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_14ssp"
            android:paddingLeft="@dimen/_60sdp"
            android:paddingBottom="@dimen/_15sdp"
            />



    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="?android:attr/listDivider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/_17sdp"
            android:layout_height="@dimen/_17sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/info_icon"/>

        <TextView
            android:id="@+id/bluetooth_address"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:text="Phone Bluetooth Address F2:2A:46:00:00:85"
            android:layout_marginLeft="@dimen/_38sdp"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:textColor="@color/partialBlackColor"
            />
    </LinearLayout>
    </LinearLayout>
</LinearLayout>
