        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/marketImageView"
            app:layout_constraintLeft_toRightOf="@+id/marketImageView"
            app:layout_constraintTop_toTopOf="@+id/marketImageView">

            <ImageView
                android:id="@+id/size_icon"
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:contentDescription="ic_size"
                android:src="@drawable/ic_size"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/market_app_name" />


            <TextView
                android:id="@+id/market_app_name"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:ellipsize="marquee"
                android:gravity="start"
                android:singleLine="true"
                android:textColor="@android:color/black"
                tools:text="Whatsapp: online messenger application with text messages and my morw"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/apkSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:text="24Mb"
                android:textColor="@android:color/black"
                app:layout_constraintBottom_toBottomOf="@+id/size_icon"
                app:layout_constraintLeft_toRightOf="@+id/size_icon"
