<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:background="@drawable/stepper_bg_gradient"
    android:gravity="center"
    android:layout_centerInParent="true"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">




        <ImageView
            android:id="@+id/default_card"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:contentDescription="df_launcher_icon"
            android:padding="@dimen/_20sdp"
            android:src="@drawable/ic_earth_grid"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.32999998"/>

    <View
        android:id="@+id/view3"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorLine"
        app:layout_constraintEnd_toEndOf="@+id/default_launguage"
        app:layout_constraintStart_toStartOf="@+id/default_launguage"
        app:layout_constraintTop_toBottomOf="@+id/default_card" />

    <TextView
        android:id="@+id/default_launguage"
        style="@style/permissions_title_theme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/_16sdp"
        tools:text="@string/allow_device_admin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view3" />

    <View
        android:background="@color/colorLine"
        android:id="@+id/view2"
        android:layout_height="1dp"
        android:layout_width="0dp"
        app:layout_constraintEnd_toEndOf="@+id/default_launguage"
        app:layout_constraintStart_toStartOf="@+id/default_launguage"
        app:layout_constraintTop_toBottomOf="@+id/default_launguage" />
    <!--<com.google.android.material.button.MaterialButton-->
    <!--android:id="@+id/material_text_button"-->
    <!--style="@style/Widget.MaterialComponents.Button.OutlinedButton"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:text="@string/set_default_launcher"/>-->

    <Button
        android:background="@drawable/btn_stepper_bg"
        android:id="@+id/btn_change_language"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_width="wrap_content"
        android:text="@string/change_language_dialog_title"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2" />
</androidx.constraintlayout.widget.ConstraintLayout>
