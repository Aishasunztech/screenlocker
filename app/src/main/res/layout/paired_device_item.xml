<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/paired_device_icon"
        android:layout_width="@dimen/_17sdp"
        android:layout_height="@dimen/_17sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_gravity="center_vertical"
        app:srcCompat="@drawable/phone_icon"/>

    <TextView
        android:id="@+id/paired_device_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paired device"
        android:textSize="@dimen/_14ssp"
        android:layout_marginLeft="@dimen/_33sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/paired_device_icon"
        android:paddingTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:textColor="@android:color/black"
        />

    <ImageView
        android:id="@+id/paired_device_settings"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:padding="@dimen/_5sdp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="@dimen/_10sdp"
        app:srcCompat="@drawable/setttings_action_icon"/>

    <View
        android:layout_width="@dimen/_1sdp"
        android:layout_height="@dimen/_20sdp"
        android:background="@color/partialBlackColor"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/paired_device_settings"
        android:layout_marginRight="@dimen/_5sdp"/>

</android.support.constraint.ConstraintLayout>
