<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >


        <shape>
            <solid android:color="@color/colorLightBlack"/>
            <corners android:radius="@dimen/_20sdp"/>
            <padding
                android:left="@dimen/_20sdp"
                android:right="@dimen/_20sdp"/>
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape>
            <stroke android:color="@color/colorWhite" android:width="@dimen/_1sdp"/>
            <corners android:radius="@dimen/_20sdp"/>
            <padding
                android:left="@dimen/_20sdp"
                android:right="@dimen/_20sdp"/>
        </shape>
    </item>
</selector>